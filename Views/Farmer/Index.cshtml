@model IEnumerable<Farmer>

<h2 class="text-center mb-4" style="color: green;">Farmer List</h2>

<table class="table table-responsive table-hover table-bordered" style="background-color: #F5DEB3; border: 2px solid #8B4513;">
    <thead style="background-color: #D2B48C;">
        <tr>
            <th style="color: yellow;">Farmer Name</th>
            <th style="color: yellow;">Email</th>
            <th style="color: yellow;">Number</th>
            <th style="color: yellow">Location</th>
            <th style="color: yellow;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td style="background-color: #FFF8DC; color: #8B4513;">@farmer.FarmerName</td>
                <td style="background-color: #FFF8DC; color: #8B4513;">@farmer.Email</td>
                <td style="background-color: #FFF8DC; color: #8B4513;">@farmer.Number</td>
                <td style="background-color: #FFF8DC; color: #8B4513;">@farmer.Location</td>
                <td>
                    <a href="/Farmer/Update/@farmer.FarmerID" class="btn" style="background-color: green; color: white; border: 1px solid #8B4513;">Update</a>
                    <a href="/Farmer/Reject/@farmer.FarmerID" class="btn" style="background-color: red; color: white; border: 1px solid #8B4513;">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Farmer/Approve" class="btn btn-primary">Add Farmer</a>