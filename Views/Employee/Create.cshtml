@model Employee

<h2 class="text-center mb-4" style="color: yellow;">Add new Employee</h2>

<form asp-action="Create" class="mx-auto p-4 shadow rounded" style="max-width: 600px; background-color: #F5DEB3; border: 2px solid #8B4513;">
    
    

    <div class="form-group mb-4">
        <label for="Name" class="form-label fw-bold" style="color: #D2691E;">Name</label>
        <input asp-for="Name" class="form-control" style="background-color: #FFF8DC; border: 1px solid #8B4513; color: #8B4513;" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="Product" class="form-label fw-bold" style="color: #D2691E;">Product</label>
        <input asp-for="Product" class="form-control" style="background-color: #FFF8DC; border: 1px solid #8B4513; color: #8B4513;" />
        <span asp-validation-for="Product" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="Date" class="form-label fw-bold" style="color: #D2691E;">Date</label>
        <input asp-for="Date" class="form-control" style="background-color: #FFF8DC; border: 1px solid #8B4513; color: #8B4513;" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label for="Price" class="form-label fw-bold" style="color: #D2691E;">Price</label>
        <input asp-for="Price" class="form-control" style="background-color: #FFF8DC; border: 1px solid #8B4513; color: #8B4513;" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn" style="background-color: #CD853F; color: white; border: 1px solid #8B4513;">Save</button>
        <a asp-action="Index" class="btn" style="background-color: #8B4513; color: white; border: 1px solid #8B4513;">Back to List</a>
    </div>
</form>
